<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Název"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_createCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Uložit"
        app:layout_constraintEnd_toEndOf="@+id/et_categoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/et_categoryTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancelCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Zrušit"
        app:layout_constraintStart_toStartOf="@+id/et_categoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/et_categoryTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>